const express = require('express');
const axios = require('axios');
const cors = require('cors');
const bodyParser = require('body-parser');

const app = express();
const PORT = process.env.PORT || 3000;

app.use(cors());
app.use(bodyParser.urlencoded({ extended: true }));
app.use(bodyParser.json());

const JUDGEME_API_KEY = process.env.JUDGEME_API_KEY;
const JUDGEME_API_URL = 'https://api.judge.me/v1/reviews';
const SHOPIFY_PRODUCT_ID = '1234567890'; // Replace with real product ID or use dummy one

app.post('/submit-review', async (req, res) => {
  const { name, date, stars, body } = req.body;

  try {
    const response = await axios.post(JUDGEME_API_URL, {
      review: {
        product_external_id: SHOPIFY_PRODUCT_ID,
        reviewer_name: name,
        reviewer_email: `${name.toLowerCase().replace(/\\s+/g, '')}@flipxdeals.com`,
        rating: stars.length,
        title: 'FlipXDeals Customer Review',
        body,
        verified: true,
        reviewed_at: new Date(date).toISOString()
      }
    }, {
      headers: {
        Authorization: `Bearer ${JUDGEME_API_KEY}`,
        'Content-Type': 'application/json'
      }
    });

    console.log('✅ Submitted to Judge.me');
    res.redirect('/pages/customer-reviews');
  } catch (err) {
    console.error('❌ Error:', err.response?.data || err.message);
    res.status(500).send('Failed to submit review.');
  }
});

app.listen(PORT, () => console.log(`Server live on http://localhost:${PORT}`));
